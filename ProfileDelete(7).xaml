<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MechAp.ProfileDelete">
    <ContentPage.Content>
        <StackLayout>
            <!-- Banner -->

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Label Style="{StaticResource HeaderGrid}"
                       Text="Photo"
                       BackgroundColor="Black"
                       HeightRequest="90"
                       MinimumHeightRequest="90"
                       Grid.Row="0"
                       Grid.Column="0"/>

                <Label Style="{StaticResource HeaderGrid}"
                       x:Name="UsernameLabel"
                       Text="Username"
                       Grid.Row="0"
                       Grid.Column="1"/>

                <Image Source="mechaplogo.PNG" 
                       Style="{StaticResource Logo}"
                       Grid.Row="0"
                       Grid.Column="2"/>
            </Grid>

            <!-- Body -->

            <Label Style="{StaticResource MainBannerLabel}"
                   Text="Delete Your Profile"/>

            <Label Style="{StaticResource SubBannerLabel}" Margin="20, 30, 20, 10"
                   Text="We are sorry to see you go!&#xA;We will be here when you come back."/>

            <Entry Style="{StaticResource TopEntry}" 
                   Placeholder="Enter Your Password"/>

            <Label Style="{StaticResource LargeLabelText}" Margin="20, 20, 20, 40"
                   Text="Warning: Upon deletion of this profile, user will no longer be able to access the associated garage content and not previously downloaded maintenance log content."/>

            <!-- Navigation Buttons -->

            <Button Style="{StaticResource Button}"
                        x:Name="DeleteBtn"
                        Text="Delete Profile"
                        Clicked="DeleteBtn_Clicked"/>

            <Button Style="{StaticResource Button}"
                        x:Name="CancelBtn"
                        Text="Cancel"
                        Clicked="CancelBtn_Clicked"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>