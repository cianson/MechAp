<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="MechAp.VehicleRegistration">
    <ContentPage.Content>
        <StackLayout>
            <Frame BackgroundColor="Black" Padding="30" Margin="0" CornerRadius="0">
                <Label Text="Vehicle Registration" HorizontalTextAlignment="Center" TextColor="Silver" FontSize="48"/>
            </Frame>
            <Frame BackgroundColor="Black" Margin="30, 0, 30, 15" CornerRadius="10">
                <Image Source="mechaplogo.PNG" WidthRequest="100" MinimumWidthRequest="100">
                </Image>
            </Frame>
            <Entry Placeholder="Vehicle Name" Margin="20, 0, 30, 10"/>
            <Entry Placeholder="Vehicle Year" Margin="20, 3, 30, 10"/>
            <Entry Placeholder="Vehicle Make" Margin="20, 3, 30, 10"/>
            <Entry Placeholder="Vehicle Model" Margin="20, 3, 30, 10"/>
            <Entry Placeholder="Vehicle Style" Margin="20, 3, 30, 10"/>
            <Entry Placeholder="Mileage" Margin="20, 3, 30, 10"/>

            <!--Navigate away from Vehicle Registration-->
            <Button x:Name="MyGaragePgBtn" Text="Add to My Garage" Clicked="AddGarageBtn_Clicked" Margin="30, 0, 30, 20" CornerRadius="30"></Button>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>